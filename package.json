{
	"name": "pkgroll",
	"version": "0.0.0-semantic-release",
	"description": "Zero-config rollup bundler",
	"keywords": [
		"zero config",
		"rollup",
		"package.json",
		"exports",
		"esm",
		"cjs",
		"commonjs",
		"typescript",
		"declaration"
	],
	"license": "MIT",
	"repository": "privatenumber/pkgroll",
	"funding": "https://github.com/privatenumber/pkgroll?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"dist"
	],
	"imports": {
		"typescript": "./src/local-typescript-loader.ts"
	},
	"bin": "./dist/cli.js",
	"scripts": {
		"Target is 12.20 for import(), node: prefix is not used": "",
		"build": "tsx src/cli.ts --minify --target node12.20",
		"test": "pnpm build && tsx tests/index.ts",
		"lint": "eslint --cache .",
		"type-check": "tsc --noEmit",
		"prepack": "pnpm build && clean-pkg-json"
	},
	"peerDependencies": {
		"typescript": "^4.1 || ^5.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"dependencies": {
		"@rollup/plugin-alias": "^4.0.3",
		"@rollup/plugin-commonjs": "^24.0.1",
		"@rollup/plugin-inject": "^5.0.3",
		"@rollup/plugin-json": "^6.0.0",
		"@rollup/plugin-node-resolve": "^15.0.1",
		"@rollup/plugin-replace": "^5.0.2",
		"@rollup/pluginutils": "^5.0.2",
		"esbuild": "^0.17.7",
		"magic-string": "^0.29.0",
		"rollup": "^2.79.1"
	},
	"devDependencies": {
		"@pvtnbr/eslint-config": "^0.33.0",
		"@types/node": "^18.13.0",
		"clean-pkg-json": "^1.2.0",
		"cleye": "^1.3.1",
		"eslint": "^8.34.0",
		"execa": "^7.0.0",
		"fs-fixture": "^1.2.0",
		"get-node": "^13.6.0",
		"get-tsconfig": "^4.4.0",
		"kolorist": "^1.7.0",
		"manten": "^0.6.1",
		"rollup-plugin-dts": "^5.1.1",
		"tsx": "^3.12.3",
		"type-fest": "^3.5.7",
		"typescript": "^4.9.5"
	},
	"eslintConfig": {
		"extends": "@pvtnbr",
		"ignorePatterns": [
			"tests/fixture-package"
		]
	}
}
